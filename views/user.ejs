<% include ./partials/header %>

<div class="ui main container">
    <div class="ui huge header">User Details</div>
    <div class="ui compact inverted segment description">
        <div class="field">
        <p>Username: <%= currentuser.username %></p>
    </div>
    <div class="field">
        <p>Email ID: <%= currentuser.email %></p>
    </div>
    </div>
    
    <div class="ui four stackable link cards">
        <% blogs.forEach(function(blog){ %>
        <% if(currentuser && blog.user.id.equals(currentuser._id)){ %>
        <a class="ui fluid card" href="/blogs/<%=blog._id%>">
            <div class="image">
                <img src="<%= blog.image %>">
            </div>
            <div class="content">
                <div class="header"><%= blog.title %></div>
                <div class="description">
                    <%- blog.body.substring(0,50) %>
                </div>
            </div>
            <div class="extra content">
                <span class="right floated">
                    <%= blog.created.toDateString() %>
                </span>
                <span>
                    <i class="meta"></i>
                    Created On:
                </span>
            </div>
        </a>
        <% } %>
        <% }) %>
    </div>
</div>
<% include ./partials/footer %>